.mensajeError
	padding 0 0 .5em 0
.textError
	text-align center
	font-size 1em


.table
	&-body
		height 350px
		&-row
			&-data
				padding 0 .5em
				white-space nowrap
	&-head
		&-row
			text-align left
			&-column
				padding .5em
				white-space nowrap
    			>a
    				text-shadow 1px 1px 7px black
    				display block
    				width 100%
    				height 100%
.boton-medium
	text-align center
	line-height 45px
	height 45px
	width 45px
	display block
	z-index 10
.boton-small
	text-align center
	line-height 33px
	display block
	z-index 10
	transition .3s
	&:hover
		background rgba(white, .2)
.componente-panel
	width 100%
.componente-panel-dual
	width 100%
.componente-panel-group
	width 100%
.container-boton-small
	height 35px
	width 35px

.container-componente-panel-group
.container-componente-panel-dual
	width 100%
.container-boton
	width 200px
	&-link
		text-shadow 1px 1px 7px black
		box-shadow 0 0 5px black
		text-align center
		line-height 33px
		height 35px
		display block
		transition .3s
		border 1px solid white
		&:hover
			background rgba(white, .2)
.container
	width 100%
.container-imagen
	width 100%
	display flex
	justify-content center
	align-items center
	flex-direction column
.banner
	max-width 320px
	height 320px
	display block
	margin 0 auto
.imagen
	width 180px
	height 180px
	display block
	margin 0 auto

.imagen-perfil
	display block
	width 180px
	height 180px
	border-radius 50%
	transition .7s
	&:hover
		transform rotateY(180deg)
.container-label
	margin 0 0 .5em 0
.container-label-panel
	margin 0 0 .5em 0
	display flex
	justify-content space-between
	align-items center
.container-panel
	width 100%
.container-submit
	display flex
	justify-content center
	align-items center
	width 250px
	margin .5em auto
	border 2px solid white
	box-shadow 0 0 7px black
.container-submit-small
	display flex
	justify-content center
	align-items center
	width 80px
.container-form
	padding .5em
.container-table
	width 100%
	box-shadow 0 0 5px black
	overflow-x auto
	height 350px
.container-radio-button-panel
.container-radio-button
	width 100%
	>ul
		display flex
		justify-content space-between
		align-items center
		>li
			width 100%
			>label
				text-align center
.field
	margin .5em 0
	display flex
	flex-direction column
.field-panel
	width 100%
	margin .5em 0
	display flex
	flex-direction column
.required
	font-size 1em

.input
	width 100%
.input-panel
	width 100%
.link
	font-size 1em
	transition .3s
	&:hover
		text-decoration underline


.input-file
	width 100%
	border 0
	outline 0
.submit
	background transparent
	border 0
	color white
	display block
	height 35px
	line-height 35px
	outline 0
	text-align center
	text-shadow 1px 1px 7px black
	transition .3s
	width 100%
	&:hover
		background rgba(white, .2)
		cursor pointer

.label
.label-panel
	width 100%
.input-field-area-default
	background gris_claro
	border 1px solid #9e9e9e
	border-radius 5px
	font-size 1em
	outline 0
	height 100px
	padding .5em
	width 100%
	&:focus
		border 1px solid skyblue

.select-field-default
.input-field-default
	background gris_claro
	border 1px solid #9e9e9e
	border-radius 5px
	font-size 1em
	outline 0
	height 35px
	padding .5em
	width 100%
	&:focus
		border 1px solid skyblue

 .date-field-default
 	background gris_claro
	border 1px solid #9e9e9e
	border-radius 5px
	font-size 1em
	outline 0
	height 35px
	padding .5em
	width 100%
	&:focus
		border 1px solid skyblue

.radio-button-field-default
 	background gris_claro
	font-size 1em
	outline 0
	&:focus
		border 1px solid skyblue

.error
	width 100%
	color red
	font-size .8em
.form
.form-panel
.form-report
	display block
	width 100%

.form-search
	width 100%
	display flex
	justify-content center
	.icono
		width 35px
		height 35px
		display block
		&-label
			line-height 35px
			text-align center
	&-fields
		margin .5em 0
		display flex
		justify-content space-between
		align-items center
		flex-direction column
		>label
			width 100%
			display block
.form-pagina
	display flex
	align-items center
	justify-content space-between
	width 100%
	.number
		width 100px
.paneles
	display flex
	justify-content center
	align-items center
	flex-direction column
.panel
	width 100%
.panel-head
.panel-body
	padding .5em
.panel-menu

	width 100%
	display flex
	justify-content space-between
	align-items center
	flex-direction column
	>li
		transition .3s
		width 100%
		height 35px
		>a
			line-height 35px
			padding 0 .5em
			display block
			width 100%
			height 100%
			transition .3s
			&:hover
				background rgba(white, .2)
.panel-right
	margin 0 auto
	max-width 320px
.panel-left
	max-width 320px
	margin 0 auto
@media screen and (min-width:480px)
	.banner
		width 450px
		height 450px
		max-width initial
	.panel-menu
		flex-direction row
	.form-search
		display flex
		justify-content center
		align-items center

	.error
		display flex
		flex-direction row-reverse
	.form-report
		max-width 700px
	.form
		max-width 550px
		padding 0 1em
	.container-label
		margin 0
		width 40%

	.container-radio-button
	.input
		width 60%
	.field
		justify-content space-between
		align-items center
		flex-direction row
	.submit
		width 250px

@media screen and (min-width:700px)
	.panel-body
		display flex
	.container-componente-panel-dual
		width 100%
		display flex
		justify-content space-between
		align-items center
	.container-componente-panel-group
		width 100%
		display flex
		justify-content space-between
		align-items center
		flex-wrap wrap
	.componente-panel-group
		width 250px
	.panel-left
		padding 0 .5em
		max-width initial
		width 320px
	.panel-right
		max-width initial
		width 70%
		padding 0 .5em
	.componente-panel-dual
		display flex
		justify-content space-between
		flex-direction column
		width 49%
@media screen and (min-width:1000px)
	.form
		max-width 700px
	.form-report
		max-width 1000px
